<!DOCTYPE html>
<html>

<head>
	<link href="https://fonts.googleapis.com/css?family=Poppins:400,400i,700&display=swap" rel="stylesheet"
		type="text/css">
	<link href="https://fonts.googleapis.com/css?family=Fira+Code&display=swap" rel="stylesheet" type="text/css">


	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, user-scalable=no, minimal-ui">

	<title>{{#resume.basics}}{{name}}{{/resume.basics}}</title>

	<style>
		{{{css}}}
	</style>

	<script src="https://cdn.jsdelivr.net/gh/akzhy/vara@master/src/vara.min.js" type="text/javascript"></script>
</head>

<body>
	<main id="splash" class="page">
		{{> namesplash}}
	</main>
	<section id="about-me" class="page">
		{{> about}}
		<div class="back-container">
			<a href="#" class="go-back" aria-label="Go back"></a>
		</div>
	</section>
	<section id="my-work" class="page">
		{{> work}}
	</section>
	<section id="experience" class="page">
		{{> experience}}
	</section>
	<section id="contact-me" class="page">
		{{> contact}}
	</section>

	<script>
		// nav link "backs"
		document.querySelector("#about-me .go-back").addEventListener("click", () => {
			document.getElementById("about-me").classList.remove("in")
		})
		document.querySelector("#my-work .go-back").addEventListener("click", () => {
			document.getElementById("my-work").classList.remove("in")
		})
		document.querySelector("#experience .go-back").addEventListener("click", () => {
			document.getElementById("experience").classList.remove("in")
		})
		document.querySelector("#contact-me .go-back").addEventListener("click", () => {
			document.getElementById("contact-me").classList.remove("in")
		})

		// horizontal scrolling

		document.querySelector("#my-work").addEventListener("wheel", e => {
			document.querySelector("#my-work").scrollLeft += e.deltaY;
		})
	</script>
	{{!-- {{> basics }}
		{{!-- {{> work }}
		{{> volunteer }}
		{{> education }}
		{{> awards }}
		{{> publications }}
		{{> skills }}
		{{> languages }}
		{{> interests }}
		{{> references }} --}}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-tilt/1.7.0/vanilla-tilt.min.js"
		type="text/javascript"></script>
</body>

</html>